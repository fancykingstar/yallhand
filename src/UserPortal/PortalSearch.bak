import React from "react"
import { inject, observer} from "mobx-react"
import { UIStore } from "../Stores/UIStore"
import {PortalSearchLogo} from "./PortalSearchLogo"
import PortalSearchResults from "./PortalSearchResults";



export class PortalSearch extends React.Component {

   
      render(){
          const isSearchResults = 
            UIStore.search.searchAnnouncementsData.length !== 0 
            || UIStore.search.searchPoliciesData.length !== 0?
            <PortalSearchResults/>
            :
            <PortalSearchLogo />
        return(
            <div style={{width: "100%", height: "100%", position: "absolute"}}> 
              {isSearchResults}
            </div>
        )
      }
    
}