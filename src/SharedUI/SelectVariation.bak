import React from "react";
import { Dropdown, Form } from "semantic-ui-react";
import {inject, observer} from "mobx-react"

export const SelectVariation = inject("DataEntryStore", "PoliciesStore")(observer((props) =>  {
    const {DataEntryStore} = props
    const {PoliciesStore} = props
    const handleChange = (val) => {
      // PoliciesStore.toggledContentVariationID()
      // DataEntryStore.toggleContentVariationID(val)
      DataEntryStore.setCurrentObjVariation(DataEntryStore.newTempObj.variations.filter(vari => vari.variationID === DataEntryStore.toggledContentVariationID)[0])
    }
    return (
        <div style={{width: 300, display: 'inline-block'}}>
        <Form>
          <label>Select variation to view/edit</label>
 
          <Dropdown
            placeholder="Teams"
            fluid
            search
            selection
            options={props.options}
            defaultValue={props.default}
            onChange={(e, val) => handleChange(val.value)}
          />
        </Form>
    </div>
    )}))


